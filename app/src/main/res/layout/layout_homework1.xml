<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:text="+"
        android:id="@+id/btn"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="-"
        android:id="@+id/btn1"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="*"
        android:id="@+id/btn2"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="/"
        android:id="@+id/btn3"
        android:onClick="doCount"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="请输入X:"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="20"
            android:id="@+id/edit1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="请输入Y:"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="20"
            android:id="@+id/edit2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text1"
        android:layout_height="wrap_content" />
</LinearLayout>